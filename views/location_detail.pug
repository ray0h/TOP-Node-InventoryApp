extends layout

block content
  button.text-base.my-2.mr-2.bg-blue-500.p-1.text-white.rounded(class='hover:bg-blue-600 hover:text-gray-100')
    a(href='/inventory/location/create') Create a New Location
  
  div.mb-4
    span.text-2xl.mb-2 Location: #{location.name}
    button.text-xl.ml-4.p-1.rounded(class='hover:bg-blue-100 hover:text-gray-400')
      a(href=location.url + '/update')
        i.fa.fa-edit
    button.text-xl.p-1.rounded(class='hover:bg-blue-100 hover:text-gray-400')
      a(href=location.url + '/delete')
        i.fa.fa-trash
  
  div.text-base
    h4.text-lg Available Items in Location:
    ul.ml-4
      each grocery in grocery_list
        li.list-disc 
          a(href=grocery.url, class='hover:text-blue-400 hover:underline') #{grocery.name}
      else
        li.list-disc This location currently has no items

  
  button.text-base.mt-2.mr-2.bg-gray-400.p-1.text-black.rounded(class='hover:bg-gray-500 hover:text-white')
    a(href= title==='Update Location' ? location.url : '/inventory/locations') Back
