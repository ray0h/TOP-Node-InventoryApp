extends layout

block content
  h2 #{title}

  form(method='POST' action='')
    div
      label(for='name') Location:
      br
      input#name(type='text', placeholder='e.g. Produce, Meats, Aisle11, etc.', name='name', value= location ? location.name : '')
      br
      button
        a(href= title==='Update Location' ? location.url : '/inventory/locations') Back
      button(type='submit') Submit

    if errors
      ul
        for error in errors
          li!=error.msg
